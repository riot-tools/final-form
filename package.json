{
    "name": "@riot-tools/final-form",
    "version": "3.0.3",
    "description": "Riot HOC for using Final Form",
    "main": "dist/umd.js",
    "module": "dist/es.js",
    "browser": "dist/iife.js",
    "typings": "dist/types/index.d.ts",
    "files": [
        "dist",
        "readme"
    ],
    "scripts": {
        "start": "npm run test --recursive --watch",
        "test": "npm run build; mocha -r esm -r ./tests/_setup.js -r ts-node/register 'tests/**/*.ts'",
        "build": "rollup -c",
        "watch": "nodemon -e ts,js,riot,json -w lib -w tests -x 'yarn test'"
    },
    "authors": [
        "Danilo Alonso <danilo@alonso.network>"
    ],
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/riot-tools/final-form.git"
    },
    "keywords": [
        "riot",
        "final-form",
        "forms"
    ],
    "bugs": {
        "url": "https://github.com/damusix/riot-final-form/issues"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    },
    "license": "MIT",
    "homepage": "https://github.com/damusix/riot-final-form#readme",
    "peerDependencies": {
        "final-form": ">= 4.x.x",
        "riot": ">= 4.x.x"
    },
    "devDependencies": {
        "@babel/core": "^7",
        "@babel/polyfill": "^7",
        "@babel/preset-env": "^7",
        "@babel/register": "^7",
        "@commitlint/cli": "^11",
        "@commitlint/config-conventional": "^11",
        "@riot-tools/sak": "^1.0.1",
        "@riotjs/hot-reload": "^6.0.0",
        "@riotjs/ssr": "^7.1.1",
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/git": "^9.0.0",
        "@types/chai": "^4.2.21",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16",
        "@types/sinon": "^10.0.2",
        "@typescript-eslint/eslint-plugin": "^4.29.3",
        "@typescript-eslint/parser": "^4.29.3",
        "chai": "^4.3.4",
        "eslint-config-riot": "^3.0.0",
        "esm": "^3.2.25",
        "fast-check": "^2.14.0",
        "final-form": "^4",
        "jsdom": "^16.5.3",
        "mocha": "^8.4.0",
        "riot": ">4",
        "rollup": "^2.47.0",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-delete": "^2.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.30.0",
        "sinon": "^11.1.2",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "footer-max-line-length": [
                0,
                "always"
            ],
            "body-max-line-length": [
                0,
                "always"
            ]
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "release": {
        "ci": false,
        "branches": [
            "+([0-9])?(.{+([0-9]),x}).x",
            "main",
            {
                "name": "next",
                "prerelease": true
            }
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/changelog",
            "@semantic-release/release-notes-generator",
            "@semantic-release/npm",
            "@semantic-release/git"
        ]
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true
        },
        "parser": "@typescript-eslint/parser",
        "extends": [
            "plugin:@typescript-eslint/recommended",
            "eslint-config-riot"
        ],
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "rules": {
            "indent": "off",
            "@typescript-eslint/indent": [
                "error",
                2
            ]
        }
    },
    "jspm": {
        "typeAcquisition": {
            "include": [
                "./lib/**/*"
            ]
        },
        "compilerOptions": {},
        "include": [
            "**/*.js",
            "**/*.html"
        ],
        "exclude": [
            "node_modules",
            "**/node_modules/*"
        ]
    },
    "dependencies": {
        "husky": "^7.0.2"
    }
}
