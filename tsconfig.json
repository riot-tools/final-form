{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": false,
        "noUnusedParameters": true,
        "pretty": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitThis": true,
        "target": "esnext",
        "declarationDir": "dist/types",
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "paths": {
        "tslib": [
            "./node_modules/tslib/tslib.d.ts"
        ]
    },
    "include": ["lib"]
}